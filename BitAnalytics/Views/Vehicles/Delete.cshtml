@model BitAnalytics.Models.Vehicle

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center">
    <h2 class="h2"><strong>Eliminar Vehículo</strong></h2>
   <h3>¿Está seguro que desea eliminar este vehículo?</h3>
</div>

<div class="container" style="min-height: 500px; max-width: 500px">
    <div style="height: 80px;"></div>
    <dl class="row">
        <dt class="col-sm-2">
            Patente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plate)
        </dd>
        <dt class="col-sm-2">
            Marca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class="col-sm-2">
            Modelo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            Color
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            Año
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            Cilindrada (cc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Displacement)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="row">
            <div class="col">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div class="col">
                <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-bar-left"></i></a>
            </div>
        </div>
    </form>
</div>