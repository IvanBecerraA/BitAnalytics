@model BitAnalytics.Models.Vehicle

@{
    ViewData["Title"] = "Details";
}

<div class="container text-center">
    <h2 class="h2"><strong>Detalles del Vehículo</strong></h2>
</div>
<div style="height: 80px;"></div>
<div class="container" style="min-height: 500px; max-width: 500px">
    <dl class="row">
        <dt class="col-sm-2">
            Patente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plate)
        </dd>
        <dt class="col-sm-2">
            Marca
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class="col-sm-2">
            Modelo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            Color
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            Año
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            Cilindrada (cc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Displacement)
        </dd>
    </dl>

    <div class="row mt-5">
        <div class="col">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i></a>
        </div>
        <div class="col">
            <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-bar-left"></i></a>
        </div>
    </div>
</div>

